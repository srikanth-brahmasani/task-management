<% provide(:title, "Create Task") %>
<h1>Create Task</h1>

<div class="row">
  <div class="span7">
    <%= form_for(:tasks, url: tasks_path) do |f| %>
        <% if current_user.admin?%>
        <div style="margin-top: 20px">
              Select User
              <%= select_tag "user_id", options_for_select(@all_users) %>
        </div>
        <% end %>

        <%= f.label :Description %>
        <%= f.text_area :description, class: "task-description"%>

        <%= f.label :priority %>
        <%= f.text_field :priority %>


        <div class="field">
          <%= f.label 'Deadline Date: ' %>
          <%= f.text_field :deadline, 'data-behaviour' => 'datepicker' %><br />
        </div>

        <div class="field">
          <%= f.label 'Reminder Date: ' %>
          <%= f.text_field :reminder, 'data-behaviour' => 'datepicker' %><br />
        </div>

        <%= f.submit "Create Task", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>