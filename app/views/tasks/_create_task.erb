<% provide(:title, "Create Task") %>
<h1>Create Task</h1>

<div class="row">
  <div class="span7">
    <%= form_for(:task, url: tasks_path) do |f| %>
        <% if current_user.admin?%>
        <div style="margin-top: 20px">
              Select User
          <input type="text"  name="user_id" id="tags"%>
        </div>
        <% end %>

        <%= f.label :Description %>
        <%= f.text_area :description, class: "task-description"%>

        <%= f.label :Priority %>
        <%= f.select_tag :priority, options_for_select(ApplicationHelper::PriorityValues)  %>

        <div class="field">
          <%= f.label 'Deadline Date: ' %>
          <%= f.text_field :deadline, 'data-behaviour' => 'datepicker', class:"date-picker"%><br />

        </div>

        <div class="field">
          <%= f.label 'Reminder Date: ' %>
          <%= f.text_field :reminder, 'data-behaviour' => 'datepicker', class:"date-picker" %><br />
        </div>

        <%= f.submit "Create Task", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>